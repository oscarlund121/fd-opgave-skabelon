---
import Services from "./Services.astro";
import Button from "./Button.astro";
---

<section class="hero">
  <div class="left">
    <h2>Empowering Your Business Growth</h2>
    <p>Discover tailored strategies and expert insights to take your business to the next level. Let us help you navigate challenges and achieve sustainable success.</p>
    <Button URL="#0" variant="tertiary">Book a Meeting</Button>
  </div>
  <div class="right">
    <img src="/img/heroForside.webp" alt="foto1" />
  </div>
  <Services />
</section>

<style>
  @layer components {
    .hero {
      display: grid;
      grid-template-columns: subgrid;
      gap: 0;
      grid-column: 1/-1;
      position: relative;

      &::before {
        content: "";
        position: absolute;
        inset: 0;
        bottom: 25%;
        background-color: var(--primary-color);
        z-index: -1;
      }
    }

    .left {
      grid-column: 2 / middle;
      color: var(--third-color);
      padding-block: 4rem 2rem;

      > *:not(:first-child) {
        margin-top: 20px;
      }

      * {
        display: grid;
      }

      h2 {
        font-size: var(--m-font);
        font-weight: 700;
        width: 90%;
      }

      p {
        width: 90%;
      }
    }
    .right {
      grid-column: middle / -1;
      contain: size;
      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: 50% 20%;
        place-self: center;
      }
    }
  }
</style>