---
//@ts-nocheck
const experienceData = await fetch(
  "https://frontend-design-theme.netlify.app/api/experience"
).then((response) => response.json());

console.log(experienceData);
import InfoSection from "./InfoSection.astro";
---

<div class="container">
<section>
  <InfoSection 
  tag="EXPERIENCE"
  title="More than 25 years of experience"
  text="3000+ our clients are insured around the World"
  variant="highlight"
/>

  
  <ul class="stats">
    {
      experienceData.stats.map((stat) => (
        <>
          <li class="stat-container">
            <div class="stat" style={`--percent: ${stat.value}`}></div>
            <div>{stat.label}</div>
          </li>
        </>
      ))
    } 
  </ul>
</section>
</div>

<style>


.container {
    display: grid;
    grid-template-columns: subgrid;
    gap: 2rem;
    background-color: #fbc336;
    padding-block: var(--padding-block);
}

  section {
    display: flex;
    flex-direction: row;
    align-items: top;
    justify-content:space-between;
    background-color: #fbc336;
    padding-block: 100px;

    div {
      max-width: 350px;

      h4 {
        display: inline-block;
        font-size: var(--h4-font-size);
        background-color: var(--background-color);
        border-radius: 25px;
        padding: 0 10px;
        
      }
    }
  }

  h2 {
    font-size: var(--h2-font-size);
    font-weight: bold;
  }

  .stats {
    display: flex;
    gap: 5rem;
    justify-content: center;
  }

  .stat-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .stat {
    --p: calc(var(--percent) * 1%);
    --border-width: 5px;
    --border-color: white;
    font-size: var(--h2-font-size);
    font-weight: bold;
    aspect-ratio: 1;
    width: 150px;
    margin-bottom: 1.5rem;
    border-radius: calc(Infinity * 1px);
    border: var(--border-width) solid #0000;
    background:
      radial-gradient(
          circle at 50% calc(var(--border-width) / 2),
          var(--border-color) calc(var(--border-width) / 2),
          transparent 0
        )
        border-box,
      linear-gradient(#fbc336, #fbc336) padding-box,
      conic-gradient(var(--border-color) var(--p), gray 0) border-box;

    display: grid;
    counter-reset: count var(--percent);

    &::before,
    &::after {
      grid-area: 1 / 1;
    }

    &::after {
      content: counter(count) "%";
      place-self: center;
    }

    &::before {
      content: "";
      aspect-ratio: 1;
      border-radius: calc(Infinity * 1px);
      width: calc(var(--border-width) * 4);
      background: black;
      outline: 3px solid white;
      offset-path: border-box;
      offset-distance: var(--p);
      offset-anchor: 50% calc(50% - var(--border-width) / 2);
    }
  }

  @media (max-width: 1024px) {
    .container {
        padding: 1.5rem;
    }
    
    section {
        padding-block: 60px;
    }
    
    .stats {
        gap: 3rem;
    }
    
    .stat {
        width: 120px;
    }
}

@media (max-width: 768px) {
    section {
        flex-direction: column;
        gap: 3rem;
        padding-block: 50px;
        
        div {
            max-width: 100%;
        }
    }
    
    .stats {
        gap: 2rem;
    }
}

@media (max-width: 576px) {
    .container {
        padding: 1rem;
    }
    
    section {
      flex-direction: column;
  
    }
    
    .stats {
        flex-direction: column;
      
    }
    
    .stat-container {
        flex-direction: row;
        gap: 1rem;
        width: 100%;
        justify-content: flex-start;
        text-align: left;
    }
    
    .stat {
        
      
    }
}
</style>
