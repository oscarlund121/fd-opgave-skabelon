<section class="bento">
  <div class="card image-1">
    <img src="images/womansitting.jpg" alt="Cup" />
  </div>

  <div class="card image-2">
    <img src="images/women.jpg" alt="Green Man" />
  </div>

  <div class="card image-3">
    <img src="images/hands.jpg" alt="" />
  </div>


</section>

<style>
  .bento {
    display: grid;
    position: relative;
    container-type: inline-size;
    gap: 1rem;
    grid-template-columns: 1fr 1fr;
    grid-template-areas:
      "image-1 image-2"
      "image-1 image-3";
    :nth-child(1) {
      grid-area: image-1;
    }

    :nth-child(2) {
      grid-area: image-2;
    }
    :nth-child(3) {
      grid-area: image-3;

      &::before {
        content: "";
        position: absolute;
        background: #4eaf4e;
        bottom: -125px;
        left: 25px;
        width: 164px;
        height: 307px;
        transform: rotate(90deg);
        border-radius: 12px;
        z-index: -1;
      }

       &::after {
        position: absolute;
        top: -50px;
        right: 50px;
        width: 250px;
        height: 250px;
        content: url("images/patternwhat.svg");
        object-fit: contain;
        z-index: -2;
      }

    }

    img{
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 12px;
    }

    .card {
      border-radius: 12px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
  }
</style>
