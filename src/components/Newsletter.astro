---
import Button from "./Button.astro";
---

<section>
  <div>
    <h3>Subscribe Our Newsletter</h3>
    <p>
      Build stronger Customer Relationships with <strong>Consultalk</strong>
    </p>
  </div>
  <form>
    <input type="email" placeholder="your mail address" />
    <Button variant="dash">Subscribe</Button>
  </form>
</section>

<style>
  section {
    display: grid;
    grid-template-columns: subgrid;
    grid-column: content;
    background-color: #181818;
    border-radius: var(--card-border-radius);
    padding-block: 100px;
    padding-inline-start: 25px;
    color: white;
    align-items: center;
    justify-items: center;
    gap: 1rem;
    margin-block: var(--section-pd-block);
  }

  div {
    grid-column: content-start / x;

    h3 {
      font-size: var(--h3-font-size);
      font-weight: bold;
      margin-bottom: 5px;
    }

    p {
      font-size: var(--p-font-size);
    }
  }

  form {
    display: grid;
    grid-template-columns: auto auto;
    grid-column: x / content;
    align-items: center;
    gap: 1rem;
  }

  input {
    padding: 1rem;
    border-radius: 25px;
    background-color: white;
    font-size: var(--p-font-size);
  }

  @media (width < 800px) {
    section {
      display: flex;
      flex-direction: column;
      align-items: left;
      padding-block: 50px;
    }

    form {
    margin-top: 25px;
    grid-column: content;
      
    }
  }
</style>
