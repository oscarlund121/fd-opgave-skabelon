---
import Services from "./Services.astro";
import Button from "./Button.astro";
---

<section class="full-bleed">
  <div class="content">
    <h1>Empowering Your Business Growth</h1>
    <p>
      Discover tailored strategies and expert insights to take your business to
      the next level. Let us help you navigate challenges and achieve
      sustainable success.
    </p>
    <!--     <a href="">Book a Meeting</a>
      <Button variant="primary" />  -->
    <Button variant="primary">Book a Meeting</Button>
  </div>
  <div class="img">
    <img src="images/Photo.jpg" alt="" />
  </div>
  <Services />
</section>

<style>
  section {
    display: grid;
    grid-template-columns: subgrid;
    background-color: #181818;
    
  
    .content {
      grid-row-start: 1;
      grid-column: content-start;
      margin-block: 4rem 2rem;
    }

   
    h1 {
      font-size: var(--h1-font-size);
      font-family: var(--font-family-h);
      font-weight: bold;
    }

    p {
      font-size: var(--p-font-size);
      font-family: var(--font-family-p);
    }

    section.full-bleed {
      grid-template-rows: auto 1fr 1fr;
      grid-row: 1 / -4;
    }
    .img {
      grid-column: x / -1;
      grid-row: 1 / 3;
    }
  }


</style>
