        .info-container {
      display: grid;
      grid-template-columns: auto 1fr;
      line-height: 1.5lh;
      background-position: 50% 50%;
    }

    .info-container svg {
      width: 50px;
      height: 50px;
      padding: 10px;
      border-radius: 50%;
    }

    .info-container div {
      display: flex;
      flex-direction: column;
    }

    .info-container p:last-of-type {
      font-size: 20px;
      font-weight: bold;
      color: black;
    }

