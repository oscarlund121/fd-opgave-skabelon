      grid-template-columns: 1fr 2fr;
      gap: 2rem;
      align-items: center;
      justify-content: center;
      padding: 2rem;

      h4 {
        display: inline-block;
        font-size: var(--h4-font-size);
        background-color: yellow;
        border-radius: 25px;
        padding: 0 10px;
      }
      h2 {
        font-size: var(--h2-font-size);
        font-weight: bold;
      }

      p {
        font-size: var(--p-font-size);
