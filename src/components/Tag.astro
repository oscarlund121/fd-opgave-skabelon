---
const { text, color } = Astro.props;
---

<section>
  <h4 data-variant={color}>{text}</h4>
</section>

<style>
  h4 {
    display: inline-block;
    padding: 0 10px;
    font-size: var(--h4-font-size);
    border-radius: 20px;
  }

  /* Standardfarve */
  h4[data-variant="default"] {
    background-color: var(--background-color-y);
  }


</style>
