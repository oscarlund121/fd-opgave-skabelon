---
// @ts-nocheck
import Popover from "./Popover.astro";
---

<header class="full-bleed">
  <nav>
    <h3>AskExperts</h3>
    <ul>
      <a href="/"><li>Home</li></a>
      <a href="/casestudy"><li>Case Study</li></a>
      <a href="/team"><li>Team</li></a>
      <a href="/about"><li>About</li></a>
    </ul>
    <Popover />
  </nav>
</header>

<style>

@layer components {
  header {
    background-color: var(--service-card-color);
    padding: 0;
    margin: 0;
    z-index: 1000;
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;

    width: 100%;
    color: white;
    font-size: var(--p-font-size);
    font-family: var(--font-family-p);
    h3 {
      font-family: var(--font-family-h);
      font-size: var(--h4-font-size);
      font-weight: bold;
    }

    ul {
      display: flex;
      gap: 20px;
      li {
        list-style: none;
        color: white;
      }
    }

    button {
      background: yellow;
      border: none;
      color: black;
      border-radius: 25px;
      padding: 5px 20px;
    }
  }
}
</style>
