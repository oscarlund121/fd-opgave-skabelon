---
// @ts-nocheck
import InfoSection from "./InfoSection.astro";
import TeamCard from "./TeamCard.astro";

const teamData = await fetch(
  "https://frontend-design-theme.netlify.app/api/employees"
).then((response) => response.json())
.then((data) => data.slice(0, 3));

// Slice de f√∏rste 3 personer
const limitedTeam = teamData.slice(0, 3);
---

<section>
  <div>
    <InfoSection
      tag="OUR TEAM"
      title="We champion the bold to achieve the extraordinary"
      text="Our success stems from the synergy between dedicated teams and our valued clients. We prioritize a company culture that fosters exceptional productivity, ensures customer satisfaction, and promotes mutual respect among all team members."
      variant="default"
    />
  </div>
  <div>
    <ul>
      {
        teamData.map((data) => (
          <li>
            <a href={`/employees/${data.slug}`}>
              <div class="image-container">
                <img src={data.img} alt={data.name} />
                <span>{data.title}</span>
              </div>
            </a>
            <h2>{data.name}</h2>
            <p>{data.description}</p>
            <div>
              {data.social_links.map((link) => (
                <a href={link.url} set:html={link.icon} />
              ))}
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</section>

<style>
section {
  display: grid;
  grid-template-columns: subgrid;
}

div {
    container-type: inline-size;
    container-name: team-section;
}
  ul {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    list-style: none;

    li {
      background: #fff;
      padding: 1rem;
      text-align: center;
      border-radius: 10px;

      img {
        width: 100%;
        height: auto;
        border-radius: 10px;
      }

      .image-container {
        position: relative;
        display: inline-block;
        width: 100%;

        span {
          position: absolute;
          bottom: 10px;
          right: 10px;
          background: rgba(0, 0, 0, 0.8);
          color: #fff;
          font-size: 0.9rem;
          padding: 5px 10px;
          border-radius: 5px;
          font-weight: bold;
        }
      }

      h2 {
        font-size: 30px;
        margin: 0.5rem 0;
      }

      p {
        font-size: 0.9rem;
        color: #555;
      }

      div {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        margin-top: 0.5rem;

        a {
          display: inline-block;
          width: 24px;
          height: 24px;

          svg {
            width: 24px;
            height: 24px;
            color: black;
          }

          /* Hover effekt */
          &:hover {
            opacity: 0.7;
            transform: scale(1.1);
            transition: all 0.2s ease-in-out;
          }
        }
      }
    }
  }

  @container team-section (width < 800px) {
  div {
    container-type: inline-size;
    
    ul {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      
      padding: 0;
      list-style: none;

      li {
        background: #fff;
        padding: 1rem;
        border-radius: 10px;
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-row: repeat(4, 1fr);
        gap: 1rem;
        text-align: left;

        a {
          grid-column: 1;
          grid-row: 1 / span 3;
          align-self: start;
        }

        .image-container {
          height: 100%; 
        }
        h2 {
          grid-column: 2;
      
          
        }

        p {
          grid-column: 2;
          
        }

        div {
          grid-column: 2;
          
          justify-content: flex-start;
        }
      }
    }
  }
}
 
</style>
