---
import Checkmark from "../icons/checkmark.svg";
import InfoSection from "./InfoSection.astro";
import CheckList from "./CheckList.astro";
---

<section>
  <article>
    <figure>
      <img src="images/patternwhat.svg" alt="Mønster baggrund" />
      <img src="images/maninoffice.jpg" alt="Person i kontor" />
    </figure>
    <div>
      <InfoSection
        tag="WE'LL WORK WITH YOU"
        title="What To Expect"
        text="Our collaboration is built on transparency, efficiency, and measurable results. Together, we create strategies tailored to your unique needs and goals."
        variant="default"
      />
      <CheckList
        items={[
          "Collaborate to build actionable strategies that drive sustainable growth and deliver tangible outcomes.",
          "Identify opportunities to optimize processes and implement impactful solutions with measurable results.",
        ]}
      />
    </div>
  </article>
</section>

<style>
  section {
    display: grid;
    grid-template-columns: subgrid;
    padding-block: var(--padding-block);

    article {
      display: grid;
      grid-template-columns: 1fr 1fr;
    }

    figure {
      position: relative;
      padding-top: 3rem;
      grid-column: 1;

      &::before {
        content: "";
        position: absolute;
        background: #4eaf4e;
        top: 25px;
        left: 25px;
        width: 183px;
        height: 164px;
        border-radius: 12px;
        z-index: 1;
      }
      :first-of-type {
        position: absolute;
        top: 0;
        left: 0;
        width: 250px;
        height: 250px;
        object-fit: contain;
        z-index: 0;
      }

      :last-of-type {
        position: relative;
        z-index: 2;
        width: 450px;
        justify-self: center;
        border-radius: 12px;
      }
    }
    div {
      grid-column: 2;
      grid-row: 1;
    }
  }

  @media (max-width:900px) {
    section {
      padding: 60px 40px;

      article {
        display: flex;
        flex-direction: column;
      }

      figure {
        order: 2;
        width: 100%;
        display: flex;
        justify-content: center;

        &::before {
          display: none;
        }

        :first-of-type {
          display: none;
        }

        :last-of-type {
          width: 100%;
          margin-left: 0;
          margin-top: 0;
          max-width: 600px; /* Begrænser billedets størrelse */
        }
      }

      div {
        width: 100%;
        text-align: left;
        gap: 1rem;
      }

      ul {
        padding: 0;
        list-style: none;
      }

      ul li {
        position: relative;
        padding-left: 2rem;
      }

      ul li::before {
        position: absolute;
        left: 0;
      }
    }
  }

  /* Mobile responsivity */
  @media (max-width: 576px) {
    section {
      padding: 40px 20px;

      figure :last-of-type {
        max-width: 100%;
      }

      div ul li {
        padding-left: 2.5rem;
        margin-bottom: 1rem;
      }

      div ul li::before {
        left: 0;
        top: 0.3rem;
      }
    }
  }
</style>
